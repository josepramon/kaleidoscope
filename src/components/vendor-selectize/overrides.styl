.selectize-control.multi
  .selectize-input.has-items
    font-size: 75%
    font-weight: bold


.selectize-dropdown,
.selectize-dropdown.form-control
  box-shadow: $component-shadow


.selectize-input
  color: $input-color
  &.focus
    box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 2px lighten($input-border-focus, 20%)
